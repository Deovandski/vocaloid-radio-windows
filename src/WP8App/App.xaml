<Application 
    x:Class="WPAppStudio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:services="clr-namespace:WPAppStudio.Services"
    xmlns:converter="clr-namespace:WPAppStudio.Converters"
	xmlns:mytoolkitconverters="clr-namespace:MyToolkit.Converters;assembly=MyToolkit">

    <Application.Resources>
        
        <sys:String x:Key="AppName">Vocaloid Radio - Miku.fm</sys:String>

		<!-- ViewModel locator -->
        <services:ViewModelLocatorService x:Key="ViewModelLocator"/>
		
		<local:LocalizedStrings xmlns:local="clr-namespace:WPAppStudio.Localization" x:Key="LocalizedStrings"/>

		<!-- Converters -->
		<converter:ShortDateConverter x:Key="ShortDateConverter"/>
		<converter:StringToImageResourcesConverter x:Key="StringToImageResources"/>
		<converter:ExpressionToBindingAndSanitizeConverter x:Key="ExpressionToBindingAndSanitize"/>
		<converter:ExpressionToBindingConverter x:Key="ExpressionToBinding"/>
		<converter:LocalizedResourcesConverter x:Key="LocalizedResourcesConverter"/>
        <converter:SanitizeStringConverter x:Key="SanitizeString"/>
		<converter:ThumbnailConverter x:Key="ThumbnailConverter"/>
				
		<mytoolkitconverters:VisibilityConverter x:Key="VisibilityConverter"/>
        <mytoolkitconverters:NotConverter x:Key="NotConverter"></mytoolkitconverters:NotConverter>
						
		<!-- Resources -->
        <Color x:Key="CustomApplicationAppBarBackgroundColor">#00aba9</Color>                

		<SolidColorBrush x:Key="CustomTitleApplicationTextBrush" Color="#1ba1e2" />
        <SolidColorBrush x:Key="CustomApplicationTextBrush" Color="#FF7FD1F4" />
		<SolidColorBrush x:Key="CustomApplicationBackgroundBrush" Color="#1ba1e2" />
		<SolidColorBrush x:Key="CustomApplicationAppBarBackgroundBrush" Color="{StaticResource CustomApplicationAppBarBackgroundColor}"/>
        
		<ImageBrush x:Key="CustomApplicationBackgroundImage" ImageSource="{Binding Path=LocalizedResources.BackgroundImagePngUrl, Source={StaticResource LocalizedStrings}, Converter={StaticResource StringToImageResources}}" Stretch="UniformToFill"/>		
		<BitmapImage x:Key="DefaultNoImageValue" UriSource='/Images/NoImage.png' />
		<DataTemplate x:Key="SelectorItemTemplate">
            <Grid Margin="10, 40, 10, 0">
                <TextBlock 
                    Text="{Binding Converter={StaticResource LocalizedResourcesConverter}}"
                    FontSize="36"
                    FontWeight="Light"
                    />
            </Grid>
        </DataTemplate>
		
		<!-- Maps -->
        <DataTemplate x:Name="MapModeListPickerItemTemplate">
            <StackPanel Orientation="Horizontal" Margin="16 21 0 20">
                <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                    <TextBlock Text="Mode: "/>
                    <TextBlock Text="{Binding Name}" Foreground="DarkGray"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

		<!--Styles-->
        <Style x:Key="ImageButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource CustomApplicationTextBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="{StaticResource PhoneBorderThickness}"/>
            <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilySemiBold}"/>
            <Setter Property="FontSize" Value="{StaticResource PhoneFontSizeMediumLarge}"/>
            <Setter Property="Padding" Value="10,3,10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver"/>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="ButtonBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneForegroundBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ButtonBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneForegroundBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ButtonBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneDisabledBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="ButtonBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Transparent"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="ButtonBackground"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="33"
                                Margin="{StaticResource PhoneTouchTargetOverhang}">

                                <ContentPresenter x:Name="ContentContainer" 
                                                  Content="{TemplateBinding Content}" 
                                                  OpacityMask="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding  ContentTemplate}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="4, 8" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="NormalImageButton" TargetType="Button" BasedOn="{StaticResource ImageButton}">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="65"/>
        </Style>
        
        <Style x:Key="SmallImageButton" TargetType="Button" BasedOn="{StaticResource NormalImageButton}">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
        </Style>
		
